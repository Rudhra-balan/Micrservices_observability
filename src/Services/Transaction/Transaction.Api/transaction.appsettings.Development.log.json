{

  "logger": {
    "Level": "Verbose",
    "Console": {
      "Enabled": "true"
    },
    "File": {
      "Enabled": "true",
      "Path": "/Logs/transaction-.json",
      "Interval": "Day"
    },
    "MinimumLevelOverrides": {
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    },
    "ExcludeProperties": [
      "RequestId",
      "RequestPath"
    ]
  },
  "app": {
    "Service": "transaction.Api",
    "Instance": "1",
    "Version": "1.0.0"
  }
}
