@model DomainCore.Models.Login.LoginUserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@{
    <div class="form-form">

        @if (Model?.Message != null)
        {
            <div class="alert alert-danger alert-bottom-login" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather close" data-dismiss="alert">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button> <strong>Login Failed :</strong> @Html.Raw(Model.Message)
            </div>
        }
        
                <div class="form-form-wrap">
                    <div class="form-container">
                        <div class="form-content">
                            <h2 class="">Login to <span class="brand-name">Transaction</span></h2>
                                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                                {
                                     @Html.AntiForgeryToken()
                                     @Html.ValidationSummary(true)
                                  <div id="username-field" class="field-wrapper input">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                    
                                        @Html.TextBoxFor(m => m.UserName, new { @id = "username", @placeholder = "Username", @class = "form-control", @name = "username", @required = "true", @autocomplete = "off", @maxlength = "20" })
                                  </div>

                                    <div id="password-field" class="field-wrapper input mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                                          @Html.PasswordFor(m => m.Password, new { @id = "password", @placeholder = "password", @class = "form-control", @name = "password", @required = "true", @autocomplete = "off", @maxlength = "20" })
                                    </div>
                                    <p class="signup-link"></p>
                                  
                                    <button type="submit" id="btnLogin" class="btn btn-primary">
                                        Login
                                    </button>
                                }
                            <p class="terms-conditions"></p>
                        </div>
                    </div>
                </div>
                    
            </div>
            <div class="form-image">
                <div class="l-image">
                </div>
            </div>

    }